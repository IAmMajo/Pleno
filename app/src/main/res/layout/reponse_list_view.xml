<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingTop="6dp"
    android:paddingLeft="4dp"
    android:background="@drawable/rounded_background"
    android:layout_marginTop="8dp"
    android:layout_marginStart="16dp"
    android:layout_marginEnd="16dp"
    android:layout_marginBottom="16dp">

    <!-- Header-Bereich für Rückmeldungen-Text, Zählung und Icon -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <!-- Rückmeldungen-Header linksbündig -->
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="10dp"
            android:text="Rückmeldungen"
            android:textColor="@color/black"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textStyle="bold" />

        <!-- Rechter Bereich für Zählung und Icon -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <!-- Rückmeldungsanzahl -->
            <TextView
                android:id="@+id/responseCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5 / 7"
                android:textColor="@color/black"
                android:layout_marginEnd="4dp" />

            <!-- Gruppen-Icon -->
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_groups"
                android:layout_marginEnd="15dp" />
        </LinearLayout>
    </LinearLayout>

    <!-- Rückmeldungen als scrollbare ListView -->
    <ListView
        android:id="@+id/responseListView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:divider="@color/light_gray"
        android:dividerHeight="1dp"
        android:paddingBottom="8dp" />
</LinearLayout>
