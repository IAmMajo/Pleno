  <body>
    <div class="container">
      <img
        src="https://kivop.ipv64.net/notifications-service/logo.png"
        alt="Pleno-Logo"
        class="logo"
      />
      #import("message")
      <div class="footer">
        <p>
          Mit freundlichen Grüßen,<br />Das Team von Pleno
        </p>
      </div>
    </div>
